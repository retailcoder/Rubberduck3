<Window x:Class="Rubberduck.UI.Shell.ShellWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rubberduck.UI.Shell" 
        xmlns:statusbar="clr-namespace:Rubberduck.UI.Shell.StatusBar" 
        xmlns:dockablz="http://dragablz.net/winfx/xaml/dockablz"
        xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
        mc:Ignorable="d"
        ContentRendered="OnContentRendered" 
        Style="{DynamicResource ThemedWindowStyle}"
        Title="Rubberduck Editor"
        ShowInTaskbar="True">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Rubberduck.UI;component/Styles/DefaultStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <dragablz:InterTabController x:Key="ToolWindowInterTabController" x:Shared="False" InterTabClient="{Binding ToolWindowInterTabClient}" Partition="toolwindows" />
            <dragablz:InterTabController x:Key="DocumentsInterTabController" x:Shared="False" InterTabClient="{Binding DocumentsInterTabClient}" Partition="documents" />

            <Style x:Key="TabControlStyle" TargetType="dragablz:TabablzControl">
                <Style.Setters>
                    <!-- FIXME background brush is not set here -->
                    <Setter Property="Background" Value="{DynamicResource ThemeBackgroundColorBrush}" />
                    <Setter Property="ShowDefaultAddButton" Value="False" />
                    <Setter Property="ShowDefaultCloseButton" Value="True" />
                </Style.Setters>
            </Style>
            <Style x:Key="BaseLayoutStyle" TargetType="dockablz:Layout">
                <Style.Setters>
                    <Setter Property="IsFloatDropZoneEnabled" Value="False" />
                </Style.Setters>
            </Style>
            <Style x:Key="ToolWindowLayoutStyle" TargetType="dockablz:Layout" BasedOn="{StaticResource BaseLayoutStyle}">
                <Style.Setters>
                    <Setter Property="BranchTemplate" Value="{DynamicResource ToolWindowBranchTemplate}" />
                </Style.Setters>
            </Style>
            <Style x:Key="DocumentWindowLayoutStyle" TargetType="dockablz:Layout" BasedOn="{StaticResource BaseLayoutStyle}">
                <Style.Setters>
                    <Setter Property="BranchTemplate" Value="{DynamicResource DocumentWindowBranchTemplate}" />
                </Style.Setters>
            </Style>

            <DataTemplate x:Key="ToolWindowBranchTemplate">
                <dragablz:TabablzControl ItemsSource="{Binding DataContext.ToolWindows}" 
                                         InterTabController="{StaticResource ToolWindowInterTabController}"
                                         ClosingItemCallback="{Binding DataContext.ClosingTabItemHandler}"
                                         Style="{DynamicResource TabControlStyle}" />
            </DataTemplate>
            <DataTemplate x:Key="DocumentWindowBranchTemplate">
                <dragablz:TabablzControl ItemsSource="{Binding DataContext.Documents}" 
                                         InterTabController="{StaticResource DocumentsInterTabController}"
                                         ClosingItemCallback="{Binding DataContext.ClosingTabItemHandler}"
                                         Style="{DynamicResource TabControlStyle}" />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid Background="{DynamicResource ThemeBackgroundColorBrush}"
          ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" MinHeight="200" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <local:DuckyBackgroundControl Grid.RowSpan="3" />

        <local:MenuBarControl x:Name="MenuBar" Grid.Row="0" />
        <Border Grid.Row="0" Background="{DynamicResource ThemeBackgroundColorBrush}" Opacity=".025" IsHitTestVisible="False" />

        <DockPanel Grid.Row="1">
            <dockablz:Layout DockPanel.Dock="Left" Partition="toolwindows" Style="{DynamicResource ToolWindowLayoutStyle}">
                <dragablz:TabablzControl x:Name="LeftPanelToolTabs" InterTabController="{DynamicResource ToolWindowInterTabController}" />
            </dockablz:Layout>
            <dockablz:Layout DockPanel.Dock="Right" Partition="toolwindows" Style="{DynamicResource ToolWindowLayoutStyle}">
                <dragablz:TabablzControl x:Name="RightPanelToolTabs" InterTabController="{DynamicResource ToolWindowInterTabController}" />
            </dockablz:Layout>
            <dockablz:Layout DockPanel.Dock="Bottom" Partition="toolwindows" Style="{DynamicResource ToolWindowLayoutStyle}">
                <dragablz:TabablzControl x:Name="BottomPanelToolTabs" InterTabController="{DynamicResource ToolWindowInterTabController}" />
            </dockablz:Layout>
            <dockablz:Layout DockPanel.Dock="Top" Partition="documents" Style="{DynamicResource DocumentWindowLayoutStyle}">
                <dragablz:TabablzControl x:Name="DocumentPanelToolTabs" InterTabController="{DynamicResource DocumentsInterTabController}" />
            </dockablz:Layout>
        </DockPanel>
        
        <statusbar:StatusBarControl x:Name="StatusBar" Grid.Row="2" />

        <Thumb Grid.Row="2" HorizontalAlignment="Right" IsEnabled="True" IsHitTestVisible="True" WindowChrome.IsHitTestVisibleInChrome="True"
               DragDelta="OnResizeGripDragDelta" Cursor="SizeNWSE">
            <Thumb.Template>
                <ControlTemplate>
                    <ResizeGrip Margin="0">
                    </ResizeGrip>
                </ControlTemplate>
            </Thumb.Template>
        </Thumb>
    </Grid>
</Window>
